  <body>
    <div class="container">
      <h1>Blog Articles</h1>
      <!-- <%= article %> -->
      <div class="card mt-4">
        <div class="card-body">
          <div class="card-title mt-3">
            <h1><%= article.title %></h1>
            <p><%= article.createdAt%></p>
            <h3><%= article.description %></h3>
          </div>
        </div>
      </div>
      <a href="/articles/new" class="btn btn-success mt-2">New Article</a>
    </div>
  </body>
</html>
